<resources>

    <!-- Styles for the light theme -->

    <!-- Extends TextAppearance(for backwards compatibility) and changes the color -->
    <style name="primaryTextColor" parent="TextAppearance.AppCompat">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <!-- Extends BlueTheme.primaryColor and changes the font size  -->
    <style name="primaryTextColor.Medium">
        <item name="android:textSize">@dimen/mediumFontSize</item>
    </style>

    <style name="primaryTextColor.Large">
        <item name="android:textSize">@dimen/largeFontSize</item>
    </style>

    <style name="secondaryTextColor" parent="TextAppearance.AppCompat">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="secondaryTextColor.Medium">
        <item name="android:textSize">@dimen/mediumFontSize</item>
    </style>

    <style name="secondaryTextColor.Small">
        <item name="android:textSize">@dimen/smallFontSize</item>
    </style>

    <style name="drawable">
        <item name="android:tint">?attr/colorPrimary</item>
    </style>

    <style name="button">
        <item name="android:textColor">?android:attr/colorAccent</item>
        <item name="android:background">@drawable/button_radius_25</item>
        <item name="android:padding">@dimen/smallMargin</item>
    </style>

</resources>
