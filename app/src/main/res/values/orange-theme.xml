<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="OrangeTheme" parent="Theme.AppCompat.DayNight">

        <!-- Overrides the values for color primary and color accent -->
        <item name="colorPrimary">@color/primaryBrand2Color</item>
        <item name="colorAccent">@color/secondaryBrand2Color</item>

        <!-- overrides the default activity background color -->
        <item name="android:windowBackground">@color/activityBrand2Background</item>

        <!-- This is one way of setting the textAppearance by overriding the theme's
        attributes and then using on the views we want -->
        <!-- Another way is to set the style we want in the view's textAppearance attribute  -->
        <item name="android:textAppearanceSmall">@style/BlueTheme.secondaryTextColor.Small</item>
        <item name="android:textAppearanceMedium">@style/BlueTheme.primaryTextColor.Medium </item>
        <item name="android:textAppearanceLarge">@style/BlueTheme.primaryTextColor.Large</item>
    </style>

</resources>